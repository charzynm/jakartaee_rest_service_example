{
    "name": "Jakarta EE Codespace",
    "build": {
      "dockerfile": "../Dockerfile"
    },
    "features": {
      "ghcr.io/devcontainers/features/maven:1": {}
    },
    "postCreateCommand": "mvn clean install",
    "customizations": {
      "vscode": {
        "extensions": [
          "redhat.vscode-xml",
          "redhat.vscode-jdt"
        ]
      }
    },
    "workspaceFolder": "/workspace"
  }
  